use uo;
use os;

const LEVEL_HEROIC := 1;
const LEVEL_EPIC := 2;

program startFury(parms)

	var mob := parms[1];
	var level := parms[2];

	PrintTextAbove(mob, "Przygotowanie do wpadania w szal: " + level);

	if(level <= 0)
		return;
	endif

	while(mob)
		sleep(20);
		PrintTextAbove(mob, "*wpada w szal*");
		SetObjProperty(mob, "#FastCast", 1);
		sleep(1 * (level * 2));
		EraseObjProperty(mob, "#FastCast");
	endwhile
	
endprogram