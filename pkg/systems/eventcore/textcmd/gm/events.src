program EventsToolCmd(_who, text)

  gWho  := _who;

  SetLogRunCycles(LST_CMD);

  text := SplitWords(text);
  gRes := 0;

  var Started := 0;

  case(text[1])
    "ae":     ProcAddEvent();

    "e":      ProcEvents(CInt(text[2]), CInt(text[3]));
              if(!gRes)
                return;
              endif

    "go":     GotoEventArea(gWho, text[2], text[3]);
              return;

    "loc":    GotoEventLoc(gWho, text[2], text[3]);
              return;

    default:  if(text[1])
                SendSysMessage(gWho, ".events [ae/e/go]", FONT_NORMAL, COLOR_RED);
                return;
              endif
  endcase

  if(!Started)
    BuildMainEventGump();
  endif

  while(IsLoggedIn(gWho))
    
    gRes := GSend(gWho);

    if(!gRes or !gRes.butid)
      break;
    endif

    case(gRes.butid)
      1:      ProcEvents();

      2:      ProcAddEvent();

      3:      ProcEventsControl();
    endcase

    BuildMainEventGump();
  endwhile

endprogram

