  BQGAddTextBox(350, 290, 120, 20, FCLR_TEBOX, GetStringFromTime(Data.Hour), Flags, 1, 8, "Godzina:");
  BQGAddTextBox(350, 320, 120, 20, FCLR_TEBOX, Data.Delay, Flags, 1, 9, "Opoznienie:");
  
