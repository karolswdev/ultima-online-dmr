function DropItems()

  var Done := 0;

  foreach Item in ListRootItemsInContainer(me.backpack)
    if(Item.objtype != UOBJ_MOUNT)
      if(!MoveObject(Item, me.x, me.y, me.z, me.realm))
        Say("*nie wie gdzie*");
        return;
      endif

      Done := Done + 1;
    endif
  endforeach

  if(!Done)
    Say("*pusto*");
  else
    Say("*wyrzuca*");
  endif

endfunction

