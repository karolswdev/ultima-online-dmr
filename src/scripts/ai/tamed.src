function StepBackward(me)

  var Mods := GetDirLocMods(GetReverseDir(me.facing));

  RunTowardLocation(me.x+Mods[1]*2,me.y+Mods[2]*2);
  RunTowardLocation(me.x+Mods[1]*2,me.y+Mods[2]*2);
  RunTowardLocation(me.x+Mods[1]*2,me.y+Mods[2]*2);

endfunction

